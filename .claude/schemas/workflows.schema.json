{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hospeda.dev/schemas/workflows.schema.json",
  "title": "Workflows",
  "description": "JSON Schema for validating workflow definitions",
  "type": "object",
  "required": ["metadata", "workflows"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["version"],
      "properties": {
        "version": {"type": "string", "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"},
        "lastUpdated": {"type": "string", "format": "date-time"}
      }
    },
    "workflows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "level", "criteria", "steps"],
        "properties": {
          "id": {"type": "string", "pattern": "^WF-L\\d$"},
          "name": {"type": "string"},
          "level": {"type": "integer", "minimum": 1, "maximum": 3},
          "criteria": {
            "type": "object",
            "required": ["duration", "complexity"],
            "properties": {
              "duration": {"type": "string"},
              "complexity": {"type": "string", "enum": ["trivial", "low", "medium", "high"]},
              "requiresPDR": {"type": "boolean"},
              "requiresTechAnalysis": {"type": "boolean"},
              "requiresTODOs": {"type": "boolean"}
            }
          },
          "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "name", "description"],
              "properties": {
                "id": {"type": "integer", "minimum": 1},
                "name": {"type": "string"},
                "description": {"type": "string"},
                "agent": {"type": "string"},
                "command": {"type": "string"},
                "skill": {"type": "string"},
                "optional": {"type": "boolean", "default": false},
                "parallelizable": {"type": "boolean", "default": false},
                "estimatedMinutes": {"type": "integer", "minimum": 1}
              }
            }
          },
          "outputs": {
            "type": "array",
            "items": {"type": "string"}
          },
          "validation": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    }
  }
}
