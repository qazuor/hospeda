---
import { getHomeUrl } from '@/utils';

interface Props {
    title?: string;
    message?: string;
    code?: number;
}

const {
    title = 'Ha ocurrido un error',
    message = 'Lo sentimos, no pudimos cargar la información solicitada. Por favor, intenta nuevamente más tarde.',
    code = 500,
} = Astro.props;
---

<div class='flex flex-col items-center justify-center py-16 text-center'>
    <h2 class='text-3xl font-bold mb-4'>{title}</h2>
    <p class='text-gray-600 dark:text-gray-400 mb-8 max-w-lg mx-auto'>{message}</p>
    {code && <div class='text-6xl font-bold text-primary-500 mb-6'>{code}</div>}
    <a href={getHomeUrl()} class='btn-primary'>Volver al inicio</a>
</div>
