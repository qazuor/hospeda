---
// Testimonials component
// Generate stars based on rating
const generateStars = (ratingValues: AccommodationRatingType) => {
    const values: number[] = Object.values(ratingValues);
    const sum = values.reduce((acc, val) => acc + val, 0);
    const rating = values.length ? sum / values.length : 0;
    return Array.from({ length: 5 }, (_, i) => i < rating);
};

import type { AccommodationRatingType, AccommodationReviewType } from '@repo/types';

interface Props {
    testimonials: AccommodationReviewType[];
    title: string;
    subtitle?: string;
}

const { testimonials, title, subtitle } = Astro.props;
---

<section class='py-16 bg-gray-50 dark:bg-gray-900'>
    <div class='container mx-auto px-4'>
        <div class='text-center mb-12'>
            <h2 class='text-3xl font-bold mb-4'>{title}</h2>
            <p class='text-gray-600 dark:text-gray-400 max-w-2xl mx-auto'>
                {subtitle}
            </p>
        </div>

        <div class='grid grid-cols-1 md:grid-cols-3 gap-8'>
            {
                testimonials.map((review) => (
                    <div class='bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md'>
                        <div class='flex items-center mb-4'>
                            <div class='w-12 h-12 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center mr-4 text-sm font-medium text-gray-700 dark:text-gray-300'>
                                {String(review.userId).slice(0, 2).toUpperCase()}
                            </div>
                            <div>
                                <h3 class='font-bold'>{review.userId}</h3>
                                <p class='text-gray-600 dark:text-gray-400 text-sm'>{review.accommodationId}</p>
                            </div>
                        </div>

                        <div class='flex mb-4'>
                            {generateStars(review.rating).map((filled) => (
                                <svg
                                    xmlns='http://www.w3.org/2000/svg'
                                    class={`h-5 w-5 ${filled ? 'text-accent-500' : 'text-gray-300 dark:text-gray-600'}`}
                                    viewBox='0 0 20 20'
                                    fill='currentColor'
                                >
                                    <path d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z' />
                                </svg>
                            ))}
                        </div>

                        <p class='text-gray-700 dark:text-gray-300'>{review.content}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
