---
import PostCard from '@/components/blog/PostCard.astro';
import { getBlogIndexUrl, getLangFromUrl, useTranslations } from '@/utils';
import type { Post } from '@repo/schemas';

interface Props {
    posts: Post[];
    title: string;
    subtitle?: string;
    showSeeAll?: boolean;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { posts, title, subtitle, showSeeAll = true } = Astro.props;
---

<section class='py-16 bg-white dark:bg-gray-900'>
    <div class='container'>
        <div class='text-center mb-16'>
            <h2 class='text-4xl font-bold mb-6 text-gray-900 dark:text-white'>
                {title}
            </h2>
            <p class='text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed mb-6'>
                {subtitle}
            </p>
            {
                showSeeAll && (
                    <a
                        href={getBlogIndexUrl()}
                        class='text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-semibold text-sm inline-flex items-center transition-colors'
                    >
                        {t('common.seeAll')}
                        <svg class='w-4 h-4 ml-1' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                            <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7' />
                        </svg>
                    </a>
                )
            }
        </div>

        <!-- Posts Grid -->
        <div class='grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mb-16'>
            {
                posts.map((post) => (
                    <div class='transform transition-all duration-300'>
                        <PostCard post={post} />
                    </div>
                ))
            }
        </div>

        <!-- Empty State -->
        {
            posts.length === 0 && (
                <div class='text-center py-16'>
                    <div class='bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-700 p-12 rounded-3xl shadow-lg border border-gray-100 dark:border-gray-600 max-w-md mx-auto'>
                        <div class='w-16 h-16 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full flex items-center justify-center mx-auto mb-6'>
                            <svg class='w-8 h-8 text-white' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                                <path
                                    stroke-linecap='round'
                                    stroke-linejoin='round'
                                    stroke-width='2'
                                    d='M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253'
                                />
                            </svg>
                        </div>
                        <h3 class='text-xl font-semibold mb-3 text-gray-900 dark:text-gray-100'>
                            Próximamente nuevos artículos
                        </h3>
                        <p class='text-gray-600 dark:text-gray-400'>
                            Estamos trabajando en contenido increíble para compartir contigo. ¡Vuelve pronto!
                        </p>
                    </div>
                </div>
            )
        }

        <!-- Call to Action -->
        {
            posts.length > 0 && (
                <div class='text-center'>
                    <div class='bg-gradient-to-r from-gray-50 to-white dark:from-gray-800 dark:to-gray-700 rounded-3xl p-8 border border-gray-200 dark:border-gray-600 shadow-lg'>
                        <h3 class='text-2xl font-bold mb-4 text-gray-900 dark:text-white'>
                            ¿Te gusta nuestro contenido?
                        </h3>
                        <p class='text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto'>
                            Descubre más artículos, guías de viaje y consejos para hacer de tu próxima aventura una
                            experiencia inolvidable.
                        </p>
                        <a
                            href={getBlogIndexUrl()}
                            class='inline-flex items-center bg-gradient-to-r from-primary-500 to-secondary-500 text-white px-8 py-3 rounded-full font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl'
                        >
                            Explorar todos los artículos
                            <svg class='w-5 h-5 ml-2' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                                <path
                                    stroke-linecap='round'
                                    stroke-linejoin='round'
                                    stroke-width='2'
                                    d='M17 8l4 4m0 0l-4 4m4-4H3'
                                />
                            </svg>
                        </a>
                    </div>
                </div>
            )
        }
    </div>
</section>
