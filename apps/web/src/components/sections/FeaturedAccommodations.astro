---
import AccommodationCard from '@/components/accommodations/AccommodationCard.astro';
import { getAccommodationsIndexUrl, getLangFromUrl, useTranslations } from '@/utils';
import type { AccommodationType } from '@repo/types';

interface Props {
    accommodations: AccommodationType[];
    title: string;
    subtitle?: string;
    showSeeAll?: boolean;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { accommodations, title, subtitle, showSeeAll = true } = Astro.props;
---

<section class='py-12 bg-gray-50 dark:bg-gray-900'>
    <div class='container'>
        <div class='text-center mb-6'>
            <h2 class='text-2xl sm:text-3xl font-bold text-gray-900 dark:text-gray-100 mb-3'>
                {title}
            </h2>
            <p class='text-gray-600 dark:text-gray-300 text-sm sm:text-base max-w-5xl mx-auto px-4'>
                {subtitle}
            </p>
            {
                showSeeAll && (
                    <a
                        href={getAccommodationsIndexUrl()}
                        class='text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-semibold text-sm inline-flex items-center mt-2 transition-colors'
                    >
                        {t('accommodations.seeAll')}
                        <svg class='w-4 h-4 ml-1' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                            <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7' />
                        </svg>
                    </a>
                )
            }
        </div>

        <div class='grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 lg:gap-8'>
            {
                accommodations.map((accommodation: AccommodationType) => (
                    <AccommodationCard accommodation={accommodation} />
                ))
            }
        </div>
        <div class='text-center mt-12'>
            <a
                href={getAccommodationsIndexUrl()}
                class='inline-flex items-center bg-primary-600 hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600 text-white px-8 py-3 rounded-full font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl'
            >
                Ver todos los alojamientos
                <svg class='w-5 h-5 ml-2' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                    <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M17 8l4 4m0 0l-4 4m4-4H3'
                    ></path>
                </svg>
            </a>
        </div>
    </div>
</section>
