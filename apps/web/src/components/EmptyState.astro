---
interface Props {
    title?: string;
    message?: string;
    type?: 'accommodations' | 'destinations' | 'events' | 'posts';
}

const {
    title = 'No se encontraron resultados',
    message = 'Lo sentimos, no pudimos encontrar lo que est√°s buscando.',
    type = 'accommodations',
} = Astro.props;

const icons = {
    accommodations: '/icons/home.svg',
    destinations: '/icons/map.svg',
    events: '/icons/calendar.svg',
    posts: '/icons/post.svg',
};
---

<div class='flex flex-col items-center justify-center py-16 text-center'>
    <div class='bg-gray-100 dark:bg-gray-800 rounded-full p-8 mb-6'>
        <svg
            xmlns='http://www.w3.org/2000/svg'
            class='h-16 w-16 text-gray-400'
            fill='none'
            viewBox='0 0 24 24'
            stroke='currentColor'
        >
            <title>Empty state icon</title>
            <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='1.5'
                d='M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z'
            ></path>
        </svg>
    </div>
    <h2 class='text-2xl font-bold mb-2'>{title}</h2>
    <p class='text-gray-600 dark:text-gray-400 mb-8 max-w-lg mx-auto'>{message}</p>
</div>
