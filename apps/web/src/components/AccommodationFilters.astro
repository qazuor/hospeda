---
// Accommodation filters component
import { AmenitiesTypeEnum, PriceCurrencyEnum } from '@repo/types';

const features = [
    'WiFi',
    'Aire acondicionado',
    'Cocina',
    'Estacionamiento',
    'Parrilla',
    'Piscina',
    'TV',
    'Vista al río',
];

const priceRanges = [
    { min: 0, max: 10000, label: 'Hasta $10.000' },
    { min: 10000, max: 20000, label: '$10.000 - $20.000' },
    { min: 20000, max: 30000, label: '$20.000 - $30.000' },
    { min: 30000, max: null, label: 'Más de $30.000' },
];

// Map of amenity types to display names
const amenityTypeLabels = {
    [AmenitiesTypeEnum.CLIMATE_CONTROL]: 'Climatización',
    [AmenitiesTypeEnum.CONNECTIVITY]: 'Conectividad',
    [AmenitiesTypeEnum.ENTERTAINMENT]: 'Entretenimiento',
    [AmenitiesTypeEnum.KITCHEN]: 'Cocina',
    [AmenitiesTypeEnum.BED_AND_BATH]: 'Dormitorio y Baño',
    [AmenitiesTypeEnum.OUTDOORS]: 'Exteriores',
    [AmenitiesTypeEnum.ACCESSIBILITY]: 'Accesibilidad',
    [AmenitiesTypeEnum.SERVICES]: 'Servicios',
    [AmenitiesTypeEnum.SAFETY]: 'Seguridad',
    [AmenitiesTypeEnum.FAMILY_FRIENDLY]: 'Para familias',
    [AmenitiesTypeEnum.WORK_FRIENDLY]: 'Para trabajo',
    [AmenitiesTypeEnum.GENERAL_APPLIANCES]: 'Electrodomésticos',
};

// Map of currency codes to display symbols
const currencySymbols = {
    [PriceCurrencyEnum.ARS]: '$',
    [PriceCurrencyEnum.USD]: 'US$',
};
---

<div class='bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-100 dark:border-gray-700'>
    <h2 class='font-bold mb-6 text-xl'>Filtros</h2>

    <div class='border-b border-gray-200 dark:border-gray-700 mb-6 pb-6'>
        <h3 class='font-medium mb-4 text-lg'>Precio por noche</h3>
        <div class='space-y-2'>
            {
                priceRanges.map((range) => (
                    <label class='block cursor-pointer'>
                        <input
                            type='radio'
                            name='price-range'
                            value={`${range.min}-${range.max}`}
                            class='accent-primary-500 mr-2'
                        />
                        <span class='dark:text-gray-300 text-gray-700'>{range.label}</span>
                    </label>
                ))
            }
        </div>
    </div>

    <div class='border-b border-gray-200 dark:border-gray-700 mb-6 pb-6'>
        <h3 class='font-medium mb-4 text-lg'>Características</h3>
        <div class='space-y-2'>
            {
                features.map((feature) => (
                    <label class='block cursor-pointer'>
                        <input type='checkbox' name='features' value={feature} class='accent-primary-500 mr-2' />
                        <span class='dark:text-gray-300 text-gray-700'>{feature}</span>
                    </label>
                ))
            }
        </div>
    </div>

    <div>
        <h3 class='font-medium mb-4 text-lg'>Calificación mínima</h3>
        <div class='space-y-2'>
            {
                [4, 3, 2].map((rating) => (
                    <label class='block cursor-pointer'>
                        <input type='radio' name='min-rating' value={rating} class='accent-primary-500 mr-2' />
                        <span class='flex items-center dark:text-gray-300 text-gray-700'>
                            <span class='mr-2'>{rating}+</span>
                            <svg
                                xmlns='http://www.w3.org/2000/svg'
                                class='h-5 w-5 text-accent-500'
                                viewBox='0 0 20 20'
                                fill='currentColor'
                            >
                                <title>Rating star</title>
                                <path d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z' />
                            </svg>
                        </span>
                    </label>
                ))
            }
        </div>
    </div>

    <button
        type='button'
        class='bg-primary-500 font-medium hover:bg-primary-600 mt-6 px-4 py-3 rounded-lg text-white transition w-full transform hover:scale-105 duration-200 shadow-md hover:shadow-lg'
    >
        Aplicar filtros
    </button>
</div>
