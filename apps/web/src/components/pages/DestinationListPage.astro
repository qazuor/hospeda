---
import Pagination from '@/components/ui/Pagination.astro';
import { getDestinations } from '@/data/db/destinations';
import MainLayout from '@/layout/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '@/utils';
import { getDestinationUrl, getDestinationsIndexUrlWithPage } from '@/utils/urls';
import type { DestinationType } from '@repo/types';

export interface Props {
    page: number;
    locals?: any;
}

const { page, locals } = Astro.props;
const pageSize = 12;

const { destinations, total, totalPages } = await getDestinations({
    locals,
    page,
    pageSize
});

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const title = page === 1 ? t('destination.title') : `${t('destination.title')} - Página ${page}`;
const description = page === 1 
    ? t('destination.description')
    : `${t('destination.description')} Página ${page}.`;
---

<MainLayout title={title} description={description}>
    <div class="min-h-screen bg-white dark:bg-gray-900 transition-colors duration-200">
        <!-- Hero Section -->
        <section class="bg-gradient-to-r from-teal-600 to-blue-600 dark:from-teal-700 dark:to-blue-700 text-white py-16">
            <div class="container mx-auto px-4 text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">{t('destination.heading')}</h1>
                <p class="text-xl md:text-2xl text-teal-100 max-w-3xl mx-auto">
                    {t('destination.subheading')}
                </p>
            </div>
        </section>

        <!-- Filters Section -->
        <section class="bg-gray-50 dark:bg-gray-800 py-8 border-b border-gray-200 dark:border-gray-700">
            <div class="container mx-auto px-4">
                <div class="flex flex-wrap gap-4 items-center justify-between">
                    <div class="flex flex-wrap gap-2">
                        <button class="px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors">
                            {t('destination.filters.all')}
                        </button>
                        <button class="px-4 py-2 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors">
                            {t('destination.filters.beach')}
                        </button>
                        <button class="px-4 py-2 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors">
                            {t('destination.filters.mountain')}
                        </button>
                        <button class="px-4 py-2 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors">
                            {t('destination.filters.city')}
                        </button>
                    </div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">
                        {total} {t('destination.found')}
                    </div>
                </div>
            </div>
        </section>

        <!-- Destinations Grid -->
        <section class="py-12">
            <div class="container mx-auto px-4">
                {destinations.length > 0 ? (
                    <div class="space-y-12">
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                            {destinations.map((destination: DestinationType) => (
                                <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
                                    <div class="aspect-video bg-gradient-to-br from-teal-400 to-blue-500 relative">
                                        {destination.media && destination.media.featuredImage ? (
                                            <img 
                                                src={destination.media?.featuredImage?.url} 
                                                alt={destination.name}
                                                class="w-full h-full object-cover"
                                                loading="lazy"
                                            />
                                        ) : (
                                            <div class="w-full h-full flex items-center justify-center text-white">
                                                <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                                                </svg>
                                            </div>
                                        )}
                                        <div class="absolute top-2 right-2">
                                            <span class="bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded">
                                                {destination.country || 'Destino'}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="p-4">
                                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 line-clamp-1">
                                            {destination.name}
                                        </h3>
                                        <p class="text-gray-600 dark:text-gray-400 text-sm mb-3 line-clamp-2">
                                            {destination.description || 'Descubre este increíble destino turístico.'}
                                        </p>
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                                                </svg>
                                                {destination.region || destination.country || 'Ubicación'}
                                            </div>
                                            <a 
                                                href={getDestinationUrl(destination)}
                                                class="text-teal-600 dark:text-teal-400 hover:text-teal-700 dark:hover:text-teal-300 font-medium text-sm transition-colors"
                                            >
                                                {t('destination.card.seeMore')} →
                                            </a>
                                        </div>
                                    </div>
                                </article>
                            ))}
                        </div>

                        <!-- Pagination -->
                        <Pagination 
                            page={page} 
                            totalPages={totalPages} 
                            getPageUrl={getDestinationsIndexUrlWithPage}
                            theme="teal"
                        />
                    </div>
                ) : (
                    <div class="text-center py-12">
                        <div class="max-w-md mx-auto">
                            <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">{t('destination.emptyTitle')}</h3>
                            <p class="text-gray-600 dark:text-gray-400">{t('destination.emptyMessage')}</p>
                        </div>
                    </div>
                )}
            </div>
        </section>
    </div>
</MainLayout>
