---
import { getLangFromUrl, useTranslations } from '@/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class='relative bg-gradient-to-br from-primary-600 via-primary-500 to-secondary-600 text-white'>
    <div class='absolute inset-0 bg-black/20'></div>

    <div class='container mx-auto px-4 py-16 md:py-24 relative z-10'>
        <div class='mx-auto text-center'>
            <h1 class='text-4xl md:text-5xl lg:text-6xl font-bold mb-6'>{t('home.hero.title')}</h1>
            <p class='text-xl mb-8'>
                {t('home.hero.subtitle')}
            </p>

            <div class='bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 md:p-6 max-w-4xl mx-auto'>
                <form class='grid grid-cols-1 gap-4 md:grid-cols-4'>
                    <div class='md:col-span-2'>
                        <label for='location' class='block text-gray-700 dark:text-gray-300 text-sm font-medium mb-1'
                            >{t('home.hero.destination.title')}</label
                        >
                        <input
                            type='text'
                            id='location'
                            placeholder={t('home.hero.destination.placeHolder')}
                            class='w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white bg-white dark:bg-gray-900 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition duration-200'
                        />
                    </div>

                    <div>
                        <label for='check-in' class='block text-gray-700 dark:text-gray-300 text-sm font-medium mb-1'
                            >{t('home.hero.checkin')}</label
                        >
                        <input
                            type='date'
                            id='check-in'
                            class='w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white bg-white dark:bg-gray-900 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition duration-200'
                        />
                    </div>

                    <div>
                        <label for='check-out' class='block text-gray-700 dark:text-gray-300 text-sm font-medium mb-1'
                            >{t('home.hero.checkout')}</label
                        >
                        <input
                            type='date'
                            id='check-out'
                            class='w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white bg-white dark:bg-gray-900 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition duration-200'
                        />
                    </div>

                    <div class='md:col-span-4'>
                        <button
                            type='submit'
                            class='w-full bg-orange-500 hover:bg-orange-600 text-white py-3 px-6 rounded-lg font-semibold transition duration-300 transform hover:scale-105 shadow-md hover:shadow-lg'
                        >
                            <span class='flex items-center justify-center'>
                                <svg
                                    xmlns='http://www.w3.org/2000/svg'
                                    class='h-5 w-5 mr-2'
                                    fill='none'
                                    viewBox='0 0 24 24'
                                    stroke='currentColor'
                                >
                                    <path
                                        stroke-linecap='round'
                                        stroke-linejoin='round'
                                        stroke-width='2'
                                        d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z'></path>
                                </svg>
                                {t('home.hero.search')}
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Overlay decorativo si se quiere agregar imagen de fondo -->
    <!--
  <div class="absolute inset-0 bg-[url('/path/to/bg.jpg')] bg-cover bg-center opacity-30"></div>
  -->
</section>
