// En cualquier archivo .astro - NO requiere hidratación
import { WifiIcon, HomeIcon, StarIcon } from '@repo/icons';
---

<!-- Uso directo en el template -->
<div class="amenities">
    <WifiIcon size="md" className="text-blue-500" />
    <HomeIcon size="lg" color="#10B981" />
    <StarIcon size="xl" className="text-yellow-400 hover:text-yellow-500" />
