---
export const prerender = true;

import MainLayout from '@/layout/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '@/utils';
import { getAccommodationsIndexUrl } from '@/utils/urls';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const title = t('search.title');
const description = t('search.description');

const query = Astro.url.searchParams.get('q') || '';
const location = Astro.url.searchParams.get('location') || '';
const checkIn = Astro.url.searchParams.get('checkin') || '';
const checkOut = Astro.url.searchParams.get('checkout') || '';
---

<MainLayout title={title} description={description}>
    <div class='min-h-screen bg-white dark:bg-gray-900 transition-colors duration-200'>
        <!-- Hero Section -->
        <section
            class='bg-gradient-to-r from-orange-600 to-red-600 dark:from-orange-700 dark:to-red-700 text-white py-16'
        >
            <div class='container mx-auto px-4 text-center'>
                <h1 class='text-4xl md:text-5xl font-bold mb-4'>{t('search.heading')}</h1>
                <p class='text-xl md:text-2xl text-orange-100 max-w-3xl mx-auto'>
                    {t('search.subheading')}
                </p>
            </div>
        </section>

        <!-- Search Form -->
        <section class='py-8 bg-gray-50 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700'>
            <div class='container mx-auto px-4'>
                <form
                    class='bg-white dark:bg-gray-900 rounded-lg shadow-lg p-6 border border-gray-200 dark:border-gray-700'
                >
                    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4'>
                        <div class='lg:col-span-2'>
                            <label
                                for='location'
                                class='block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'
                            >
                                {t('search.form.destination')}
                            </label>
                            <input
                                type='text'
                                id='location'
                                name='location'
                                value={location}
                                class='w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white'
                                placeholder={t('search.form.destinationPlaceholder')}
                            />
                        </div>
                        <div>
                            <label
                                for='checkin'
                                class='block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'
                            >
                                {t('search.form.checkin')}
                            </label>
                            <input
                                type='date'
                                id='checkin'
                                name='checkin'
                                value={checkIn}
                                class='w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white'
                            />
                        </div>
                        <div>
                            <label
                                for='checkout'
                                class='block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'
                            >
                                {t('search.form.checkout')}
                            </label>
                            <input
                                type='date'
                                id='checkout'
                                name='checkout'
                                value={checkOut}
                                class='w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white'
                            />
                        </div>
                        <div>
                            <label class='block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'>
                                &nbsp;
                            </label>
                            <button
                                type='submit'
                                class='w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200'
                            >
                                {t('search.form.search')}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <!-- Search Results -->
        <section class='py-12'>
            <div class='container mx-auto px-4'>
                <div class='grid grid-cols-1 lg:grid-cols-4 gap-8'>
                    <!-- Filters Sidebar -->
                    <div class='lg:col-span-1'>
                        <div
                            class='bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700 sticky top-4'
                        >
                            <h3 class='text-lg font-semibold text-gray-900 dark:text-white mb-6'>
                                {t('search.filters.title')}
                            </h3>

                            <!-- Price Range -->
                            <div class='mb-6'>
                                <h4 class='font-medium text-gray-900 dark:text-white mb-3'>
                                    {t('search.filters.priceRange')}
                                </h4>
                                <div class='space-y-2'>
                                    <input type='range' min='0' max='500' value='250' class='w-full' />
                                    <div class='flex justify-between text-sm text-gray-600 dark:text-gray-400'>
                                        <span>$0</span>
                                        <span>$500+</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Property Type -->
                            <div class='mb-6'>
                                <h4 class='font-medium text-gray-900 dark:text-white mb-3'>
                                    {t('search.filters.propertyType')}
                                </h4>
                                <div class='space-y-2'>
                                    <label class='flex items-center'>
                                        <input type='checkbox' class='rounded border-gray-300 dark:border-gray-600' />
                                        <span class='ml-2 text-sm text-gray-700 dark:text-gray-300'
                                            >{t('search.filters.types.hotel')}</span
                                        >
                                    </label>
                                    <label class='flex items-center'>
                                        <input type='checkbox' class='rounded border-gray-300 dark:border-gray-600' />
                                        <span class='ml-2 text-sm text-gray-700 dark:text-gray-300'
                                            >{t('search.filters.types.apartment')}</span
                                        >
                                    </label>
                                    <label class='flex items-center'>
                                        <input type='checkbox' class='rounded border-gray-300 dark:border-gray-600' />
                                        <span class='ml-2 text-sm text-gray-700 dark:text-gray-300'
                                            >{t('search.filters.types.house')}</span
                                        >
                                    </label>
                                </div>
                            </div>

                            <!-- Amenities -->
                            <div class='mb-6'>
                                <h4 class='font-medium text-gray-900 dark:text-white mb-3'>
                                    {t('search.filters.amenities')}
                                </h4>
                                <div class='space-y-2'>
                                    <label class='flex items-center'>
                                        <input type='checkbox' class='rounded border-gray-300 dark:border-gray-600' />
                                        <span class='ml-2 text-sm text-gray-700 dark:text-gray-300'
                                            >{t('search.filters.amenitiesList.wifi')}</span
                                        >
                                    </label>
                                    <label class='flex items-center'>
                                        <input type='checkbox' class='rounded border-gray-300 dark:border-gray-600' />
                                        <span class='ml-2 text-sm text-gray-700 dark:text-gray-300'
                                            >{t('search.filters.amenitiesList.pool')}</span
                                        >
                                    </label>
                                    <label class='flex items-center'>
                                        <input type='checkbox' class='rounded border-gray-300 dark:border-gray-600' />
                                        <span class='ml-2 text-sm text-gray-700 dark:text-gray-300'
                                            >{t('search.filters.amenitiesList.parking')}</span
                                        >
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Results -->
                    <div class='lg:col-span-3'>
                        {
                            query || location ? (
                                <div class='mb-6'>
                                    <h2 class='text-2xl font-bold text-gray-900 dark:text-white mb-2'>
                                        {t('search.results.title')}
                                    </h2>
                                    <p class='text-gray-600 dark:text-gray-400'>
                                        {query && `${t('search.results.searchFor')} "${query}"`}
                                        {location && ` ${t('search.results.in')} ${location}`}
                                    </p>
                                </div>
                            ) : (
                                <div class='text-center py-12'>
                                    <svg
                                        class='w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-4'
                                        fill='none'
                                        stroke='currentColor'
                                        viewBox='0 0 24 24'
                                    >
                                        <path
                                            stroke-linecap='round'
                                            stroke-linejoin='round'
                                            stroke-width='2'
                                            d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z'
                                        />
                                    </svg>
                                    <h3 class='text-lg font-medium text-gray-900 dark:text-white mb-2'>
                                        {t('search.results.emptyTitle')}
                                    </h3>
                                    <p class='text-gray-600 dark:text-gray-400'>{t('search.results.emptyMessage')}</p>
                                </div>
                            )
                        }

                        <!-- Sample Results -->
                        {
                            (query || location) && (
                                <div class='space-y-6'>
                                    {Array.from({ length: 6 }, (_, i) => (
                                        <div class='bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden border border-gray-200 dark:border-gray-700'>
                                            <div class='md:flex'>
                                                <div class='md:w-1/3'>
                                                    <div class='aspect-video md:aspect-square bg-gradient-to-br from-orange-400 to-red-500' />
                                                </div>
                                                <div class='md:w-2/3 p-6'>
                                                    <div class='flex justify-between items-start mb-2'>
                                                        <h3 class='text-lg font-semibold text-gray-900 dark:text-white'>
                                                            {t('search.results.sampleName')} {i + 1}
                                                        </h3>
                                                        <div class='text-right'>
                                                            <div class='text-2xl font-bold text-orange-600 dark:text-orange-400'>
                                                                ${(Math.random() * 200 + 50).toFixed(0)}
                                                            </div>
                                                            <div class='text-sm text-gray-600 dark:text-gray-400'>
                                                                {t('search.results.perNight')}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <p class='text-gray-600 dark:text-gray-400 mb-4'>
                                                        {t('search.results.sampleDescription')}
                                                    </p>
                                                    <div class='flex items-center justify-between'>
                                                        <div class='flex items-center text-sm text-gray-500 dark:text-gray-400'>
                                                            <svg
                                                                class='w-4 h-4 mr-1'
                                                                fill='currentColor'
                                                                viewBox='0 0 20 20'
                                                            >
                                                                <path d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z' />
                                                            </svg>
                                                            4.{Math.floor(Math.random() * 9) + 1} (
                                                            {Math.floor(Math.random() * 200) + 50}{' '}
                                                            {t('search.results.reviews')})
                                                        </div>
                                                        <a
                                                            href={getAccommodationsIndexUrl()}
                                                            class='bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors'
                                                        >
                                                            {t('search.results.seeDetails')}
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            )
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</MainLayout>
