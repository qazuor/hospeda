---
export const prerender = false;

import Layout from '@/layout/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '@/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('contact.title')} description={t('contact.description')}>
    <section class='bg-gray-50 dark:bg-gray-900 py-16'>
        <div class='container px-4 mx-auto'>
            <div class='text-center max-w-2xl mx-auto mb-12'>
                <h1 class='text-3xl md:text-4xl font-display font-bold mb-4'>{t('contact.heading')}</h1>
                <p class='text-gray-600 dark:text-gray-400'>{t('contact.subheading')}</p>
            </div>

            <div class='max-w-3xl mx-auto'>
                <!-- <ContactForm client:load /> -->
            </div>
        </div>
    </section>
</Layout>
