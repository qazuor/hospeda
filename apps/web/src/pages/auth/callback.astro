---
/**
 * OAuth Callback Page
 *
 * This page handles OAuth redirects from providers like Google and Facebook.
 * Clerk automatically processes the authentication and redirects to the appropriate page.
 */
import MainLayout from '../../layout/MainLayout.astro';

const title = 'Procesando autenticaci칩n - Hospeda';
const description = 'Procesando tu autenticaci칩n, por favor espera...';
---

<MainLayout title={title} description={description}>
    <main class='min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8'>
        <div class='sm:mx-auto sm:w-full sm:max-w-md'>
            <div class='flex justify-center'>
                <div
                    class='w-8 h-8 bg-gradient-to-r from-cyan-500 to-green-500 rounded-lg flex items-center justify-center'
                >
                    <span class='text-white font-bold text-lg'>H</span>
                </div>
            </div>
            <div class='mt-6 text-center'>
                <div
                    class='inline-flex items-center px-4 py-2 font-semibold leading-6 text-sm shadow rounded-md text-white bg-gradient-to-r from-cyan-500 to-green-500 transition ease-in-out duration-150'
                >
                    <svg
                        class='animate-spin -ml-1 mr-3 h-5 w-5 text-white'
                        xmlns='http://www.w3.org/2000/svg'
                        fill='none'
                        viewBox='0 0 24 24'
                    >
                        <circle class='opacity-25' cx='12' cy='12' r='10' stroke='currentColor' stroke-width='4'
                        ></circle>
                        <path
                            class='opacity-75'
                            fill='currentColor'
                            d='M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z'
                        ></path>
                    </svg>
                    Procesando autenticaci칩n...
                </div>
                <p class='mt-4 text-sm text-gray-600'>Te redirigiremos autom치ticamente en unos segundos.</p>
            </div>
        </div>

        <!-- Auto-redirect script -->
        <script>
            // Wait a moment for Clerk to process the authentication
            setTimeout(() => {
                // Check if there's a redirect URL in the query params
                const urlParams = new URLSearchParams(window.location.search);
                const redirectTo = urlParams.get('redirect_url') || '/';

                // Redirect to the intended destination
                window.location.href = redirectTo;
            }, 2000);
        </script>
    </main>
</MainLayout>
