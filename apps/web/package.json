{
    "name": "hospeda-web",
    "type": "module",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "astro dev",
        "build": "astro build",
        "build:preview": "astro build --config astro.config.preview.mjs",
        "preview": "pnpm build:preview && astro preview --config astro.config.preview.mjs",
        "astro": "astro",
        "analyze": "astro build --verbose",
        "gen:translations-keys": "pnpm tsx scripts/generate-translation-keys.ts",
        "lint": "biome check .",
        "format": "biome format --write .",
        "typecheck": "tsc --noEmit --project ./tsconfig.json",
        "clean": "rm -rf node_modules dist"
    },
    "dependencies": {
        "@astrojs/node": "^9.4.2",
        "@astrojs/react": "^3.0.9",
        "@astrojs/sitemap": "^3.4.2",
        "@astrojs/tailwind": "^5.1.0",
        "@astrojs/vercel": "^8.1.4",
        "@clerk/astro": "^2.11.2",
        "@clerk/clerk-react": "^5.42.0",
        "@repo/auth-ui": "workspace:*",
        "@repo/config": "workspace:*",
        "@repo/db": "workspace:*",
        "@repo/logger": "workspace:*",
        "@repo/schemas": "workspace:*",
        "@repo/service-core": "workspace:*",
        "@repo/types": "workspace:*",
        "@repo/utils": "workspace:*",
        "@reunmedia/astro-normalize-trailing-slash": "^0.1.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "astro": "^5.12.9",
        "astro-devtool-breakpoints": "^0.3.0",
        "astro-lighthouse": "^0.1.3",
        "astro-og": "^0.3.0",
        "astro-typed-links": "^1.1.4",
        "date-fns": "^4.1.0",
        "lucide-react": "^0.539.0",
        "nanostores": "^0.9.5",
        "pg": "^8.15.6",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "zod": "^4.0.8"
    },
    "devDependencies": {
        "@repo/tailwind-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/pg": "^8.15.1",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "astro-font-picker": "^0.2.2",
        "tailwindcss": "^4.1.12",
        "@tailwindcss/vite": "^4.1.12",
        "lightningcss": "^1.28.1"
    }
