{
    "name": "hospeda",
    "private": true,
    "version": "0.0.1",
    "description": "Modern, minimalist web platform for discovering and managing tourist accommodations in Concepci√≥n del Uruguay and the Litoral region of Argentina, built with Astro, React, TanStack, Drizzle, and PostgreSQL in a TurboRepo-optimized monorepo.",
    "homepage": "https://github.com/qazuor/hospeda",
    "author": "Qazuor <qazuor@gmail.com> (https://github.com/qazuor/)",
    "repository": {
        "type": "git",
        "url": "https://github.com/qazuor/hospeda"
    },
    "bugs": {
        "url": "https://github.com/qazuor/hospeda/issues",
        "email": "qazuor@gmail.com"
    },
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "dev:admin": "node scripts/dev-admin.js",
        "lint": "turbo run lint",
        "format": "turbo run format",
        "clean": "turbo run clean",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "test:coverage": "turbo run test:coverage",
        "check": "biome check --write .",
        "typecheck": "turbo run typecheck",
        "prepare": "husky install",
        "build:api": "pnpm --filter hospeda-api build",
        "prepare:api:prod": "pnpm exec tsx scripts/generate-api-prod-package.ts",
        "deploy:api": "pnpm build:api && pnpm prepare:api:prod && flyctl deploy --config apps/api/fly.toml --dockerfile Dockerfile.api",
        "db:start": "docker-compose up -d postgres redis",
        "db:stop": "docker-compose stop postgres redis",
        "db:restart": "pnpm db:stop && pnpm db:start",
        "db:reset": "docker-compose down -v && docker-compose up -d postgres redis && sleep 10 && pnpm db:migrate",
        "db:fresh": "sudo docker-compose down -v && sudo docker-compose up -d postgres redis && sleep 10 && pnpm db:generate && pnpm db:migrate && pnpm db:seed",
        "db:fresh-no-sudo": "docker-compose down -v && docker-compose up -d postgres redis && sleep 10 && pnpm db:generate && pnpm db:migrate && pnpm db:seed",
        "db:logs": "docker-compose logs -f postgres",
        "db:migrate": "pnpm --filter @repo/db db:migrate",
        "db:generate": "pnpm --filter @repo/db db:generate",
        "db:studio": "pnpm --filter @repo/db db:studio",
        "db:seed": "pnpm --filter @repo/seed seed --reset --required --example",
        "pgadmin:start": "docker-compose up -d pgadmin",
        "pgadmin:stop": "docker-compose stop pgadmin"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@types/node": "^22.15.3",
        "husky": "^9.1.7",
        "tsx": "^4.19.4",
        "turbo": "^2.5.3",
        "typescript": "^5.8.3"
    },
    "packageManager": "pnpm@8.15.6",
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "glob": "^11.0.3",
        "zod": "^4.0.8"
    },
    "workspaces": ["apps/*", "packages/*"],
    "pnpm": {
        "overrides": {
            "react": "19.1.1",
            "react-dom": "19.1.1"
        },
        "publicHoistPattern": ["react", "react-dom", "*react*"]
    }
}
