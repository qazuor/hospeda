# Get staged files that match our patterns
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|jsx|ts|tsx)$' || true)

# Only run Biome if there are staged files matching our patterns
if [ -n "$STAGED_FILES" ]; then
  echo "üîç Running Biome on staged files..."
  echo "$STAGED_FILES" | xargs npx biome check --write --no-errors-on-unmatched --files-ignore-unknown=true

  # Re-add files that were modified by Biome
  echo "$STAGED_FILES" | xargs git add
else
  echo "No staged files to check with Biome."
fi

# Sync TODO comments with Linear
echo "üìù Syncing TODO comments with Linear..."

# Capture currently staged files before sync
STAGED_FILES_BEFORE=$(git diff --cached --name-only)

if pnpm todo:sync --quiet 2>/dev/null; then
  echo "‚úÖ TODO sync completed successfully"
  # Re-add only the files that were originally staged
  if [ -n "$STAGED_FILES_BEFORE" ]; then
    echo "$STAGED_FILES_BEFORE" | xargs git add
  fi
else
  echo "‚ö†Ô∏è  TODO sync failed or not configured - continuing with commit"
fi
