{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": [".env"],
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "format": {
            "outputs": []
        },
        "format:check": {
            "outputs": []
        },
        "check": {
            "dependsOn": ["^check"],
            "outputs": []
        },
        "clean": {
            "cache": false
        },
        "test": {
            "dependsOn": ["build"],
            "outputs": ["coverage/**"],
            "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        }
    }
}
