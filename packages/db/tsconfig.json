{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "composite": true,
        "incremental": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "ESNext",
        "target": "ES2022",
        "types": ["node"],
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/**/*.json"],
    "exclude": ["dist", "node_modules"]
}
