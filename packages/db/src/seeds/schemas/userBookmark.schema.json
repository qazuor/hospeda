{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "userBookmark.schema.json",
    "title": "UserBookmark Seed Schema",
    "description": "JSON schema for UserBookmark entity seeds",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "UserBookmark ID (UUID)"
        },
        "userId": {
            "type": "string",
            "description": "User ID"
        },
        "entityType": {
            "type": "string",
            "enum": ["accommodation", "destination", "post", "event", "attraction"],
            "description": "Type of bookmarked entity"
        },
        "entityId": {
            "type": "string",
            "description": "ID of bookmarked entity"
        },
        "collection": {
            "type": "string",
            "description": "Bookmark collection name"
        },
        "notes": {
            "type": "string",
            "description": "User notes about the bookmark"
        },
        "rating": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "User rating for the bookmarked item"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "User-defined tags for the bookmark"
        },
        "isPublic": {
            "type": "boolean",
            "description": "Whether bookmark is public"
        },
        "isActive": {
            "type": "boolean",
            "description": "Whether bookmark is active"
        },
        "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Bookmark priority"
        },
        "visitDate": {
            "type": "string",
            "format": "date",
            "description": "Planned or actual visit date"
        },
        "adminInfo": {
            "$ref": "common.schema.json#/definitions/adminInfo"
        }
    },
    "required": ["id", "userId", "entityType", "entityId"],
    "additionalProperties": false
}
