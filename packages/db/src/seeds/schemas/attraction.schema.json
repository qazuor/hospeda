{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "attraction.schema.json",
    "title": "Attraction Seed Schema",
    "description": "JSON schema for Attraction entity seeds",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Attraction ID (UUID)"
        },
        "name": {
            "type": "string",
            "description": "Attraction name"
        },
        "slug": {
            "type": "string",
            "description": "Attraction slug"
        },
        "description": {
            "type": "string",
            "description": "Attraction description"
        },
        "type": {
            "type": "string",
            "enum": [
                "natural",
                "cultural",
                "historical",
                "architectural",
                "entertainment",
                "sports",
                "gastronomy",
                "shopping",
                "religious",
                "educational",
                "adventure",
                "wellness"
            ],
            "description": "Attraction type"
        },
        "category": {
            "type": "string",
            "enum": [
                "must_see",
                "recommended",
                "hidden_gem",
                "seasonal",
                "family_friendly",
                "adults_only",
                "accessible",
                "free",
                "paid"
            ],
            "description": "Attraction category"
        },
        "destinationId": {
            "type": "string",
            "description": "Related destination ID"
        },
        "rating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5,
            "description": "Average rating"
        },
        "reviewCount": {
            "type": "integer",
            "description": "Number of reviews"
        },
        "difficulty": {
            "type": "string",
            "enum": ["easy", "moderate", "difficult", "expert"],
            "description": "Difficulty level"
        },
        "duration": {
            "type": "object",
            "properties": {
                "min": {
                    "type": "integer",
                    "description": "Minimum duration in minutes"
                },
                "max": {
                    "type": "integer",
                    "description": "Maximum duration in minutes"
                }
            }
        },
        "price": {
            "$ref": "common.schema.json#/definitions/price"
        },
        "location": {
            "$ref": "common.schema.json#/definitions/location"
        },
        "contactInfo": {
            "$ref": "common.schema.json#/definitions/contactInfo"
        },
        "socialNetworks": {
            "$ref": "common.schema.json#/definitions/socialNetworks"
        },
        "media": {
            "$ref": "common.schema.json#/definitions/media"
        },
        "openingHours": {
            "type": "object",
            "properties": {
                "monday": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "open": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            },
                            "close": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            }
                        }
                    }
                },
                "tuesday": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "open": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            },
                            "close": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            }
                        }
                    }
                },
                "wednesday": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "open": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            },
                            "close": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            }
                        }
                    }
                },
                "thursday": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "open": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            },
                            "close": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            }
                        }
                    }
                },
                "friday": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "open": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            },
                            "close": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            }
                        }
                    }
                },
                "saturday": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "open": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            },
                            "close": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            }
                        }
                    }
                },
                "sunday": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "open": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            },
                            "close": {
                                "type": "string",
                                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                            }
                        }
                    }
                }
            }
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of tag IDs"
        },
        "features": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of feature IDs"
        },
        "isActive": {
            "type": "boolean",
            "description": "Whether attraction is active"
        },
        "isFeatured": {
            "type": "boolean",
            "description": "Whether attraction is featured"
        },
        "seo": {
            "$ref": "common.schema.json#/definitions/seo"
        },
        "adminInfo": {
            "$ref": "common.schema.json#/definitions/adminInfo"
        }
    },
    "required": ["id", "name", "slug", "description", "type", "category", "destinationId"],
    "additionalProperties": false
}
