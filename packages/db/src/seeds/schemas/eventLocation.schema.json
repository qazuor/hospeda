{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "eventLocation.schema.json",
    "title": "EventLocation Seed Schema",
    "description": "JSON schema for EventLocation entity seeds",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "EventLocation ID (UUID)"
        },
        "state": {
            "type": "string",
            "description": "Location state"
        },
        "zipCode": {
            "type": "string",
            "description": "Location zip code"
        },
        "country": {
            "type": "string",
            "description": "Location country"
        },
        "coordinates": {
            "type": "object",
            "properties": {
                "lat": {
                    "type": "string",
                    "description": "Latitude"
                },
                "lng": {
                    "type": "string",
                    "description": "Longitude"
                }
            },
            "required": ["lat", "lng"],
            "additionalProperties": false
        },
        "street": {
            "type": "string",
            "description": "Street address"
        },
        "number": {
            "type": "string",
            "description": "Street number"
        },
        "city": {
            "type": "string",
            "description": "City name"
        },
        "neighborhood": {
            "type": "string",
            "description": "Neighborhood name"
        },
        "floor": {
            "type": "string",
            "description": "Floor number"
        },
        "apartment": {
            "type": "string",
            "description": "Apartment number"
        },
        "department": {
            "type": "string",
            "description": "Department name"
        },
        "placeName": {
            "type": "string",
            "description": "Place name"
        },
        "adminInfo": {
            "$ref": "common.schema.json#/definitions/adminInfo"
        }
    },
    "required": ["id", "city"],
    "additionalProperties": false
}
