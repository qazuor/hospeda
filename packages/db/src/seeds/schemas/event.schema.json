{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "event.schema.json",
    "title": "Event Seed Schema",
    "description": "JSON schema for Event entity seeds",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Event ID (UUID)"
        },
        "slug": {
            "type": "string",
            "description": "Event slug"
        },
        "name": {
            "type": "string",
            "description": "Event name"
        },
        "summary": {
            "type": "string",
            "description": "Event summary"
        },
        "description": {
            "type": "string",
            "description": "Event description"
        },
        "media": {
            "$ref": "common.schema.json#/definitions/media"
        },
        "category": {
            "type": "string",
            "enum": [
                "MUSIC",
                "CULTURE",
                "SPORTS",
                "GASTRONOMY",
                "FESTIVAL",
                "NATURE",
                "THEATER",
                "WORKSHOP",
                "OTHER"
            ],
            "description": "Event category"
        },
        "date": {
            "type": "object",
            "properties": {
                "start": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Event start date"
                },
                "end": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Event end date"
                }
            },
            "required": ["start", "end"],
            "additionalProperties": false
        },
        "authorId": {
            "type": "string",
            "description": "Author user ID"
        },
        "locationId": {
            "type": "string",
            "description": "Related location ID"
        },
        "organizerId": {
            "type": "string",
            "description": "Related organizer ID"
        },
        "pricing": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["free", "paid", "donation"],
                    "description": "Price type"
                },
                "value": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Price value"
                },
                "currency": {
                    "type": "string",
                    "enum": ["ARS", "USD", "EUR"],
                    "description": "Price currency"
                }
            },
            "required": ["type"],
            "additionalProperties": false
        },
        "contact": {
            "$ref": "common.schema.json#/definitions/contactInfo"
        },
        "visibility": {
            "type": "string",
            "enum": ["PUBLIC", "PRIVATE", "DRAFT"],
            "description": "Event visibility"
        },
        "isFeatured": {
            "type": "boolean",
            "description": "Whether event is featured"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of tag IDs"
        },
        "seo": {
            "$ref": "common.schema.json#/definitions/seo"
        },
        "adminInfo": {
            "$ref": "common.schema.json#/definitions/adminInfo"
        }
    },
    "required": [
        "id",
        "slug",
        "name",
        "summary",
        "category",
        "date",
        "authorId",
        "visibility",
        "isFeatured"
    ],
    "additionalProperties": false
}
