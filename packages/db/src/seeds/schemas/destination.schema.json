{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Destination Seed Schema",
    "description": "Schema for destination seed data",
    "properties": {
        "slug": {
            "type": "string",
            "description": "URL-friendly identifier"
        },
        "name": {
            "type": "string",
            "description": "Name of the destination"
        },
        "summary": {
            "type": "string",
            "description": "Short summary of the destination"
        },
        "description": {
            "type": "string",
            "description": "Full description of the destination"
        },
        "isFeatured": {
            "type": "boolean",
            "default": false,
            "description": "Whether the destination is featured"
        },
        "location": {
            "$ref": "common.schema.json#/definitions/location"
        },
        "media": {
            "$ref": "common.schema.json#/definitions/media"
        },
        "seo": {
            "$ref": "common.schema.json#/definitions/seo"
        },
        "adminInfo": {
            "$ref": "common.schema.json#/definitions/adminInfo"
        },
        "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Array of tag names"
        },
        "attractions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "slug": { "type": "string" },
                    "description": { "type": "string" },
                    "icon": { "type": "string" }
                },
                "required": ["name", "slug"],
                "additionalProperties": false
            }
        },
        "reviews": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": { "type": "string" },
                    "content": { "type": "string" },
                    "rating": {
                        "type": "object",
                        "properties": {
                            "landscape": { "type": "number", "minimum": 0, "maximum": 5 },
                            "attractions": { "type": "number", "minimum": 0, "maximum": 5 },
                            "accessibility": { "type": "number", "minimum": 0, "maximum": 5 },
                            "safety": { "type": "number", "minimum": 0, "maximum": 5 },
                            "cleanliness": { "type": "number", "minimum": 0, "maximum": 5 },
                            "hospitality": { "type": "number", "minimum": 0, "maximum": 5 },
                            "culturalOffer": { "type": "number", "minimum": 0, "maximum": 5 },
                            "gastronomy": { "type": "number", "minimum": 0, "maximum": 5 },
                            "affordability": { "type": "number", "minimum": 0, "maximum": 5 },
                            "nightlife": { "type": "number", "minimum": 0, "maximum": 5 },
                            "infrastructure": { "type": "number", "minimum": 0, "maximum": 5 },
                            "environmentalCare": { "type": "number", "minimum": 0, "maximum": 5 },
                            "wifiAvailability": { "type": "number", "minimum": 0, "maximum": 5 },
                            "shopping": { "type": "number", "minimum": 0, "maximum": 5 },
                            "familyFriendly": { "type": "number", "minimum": 0, "maximum": 5 }
                        },
                        "required": [
                            "landscape",
                            "attractions",
                            "accessibility",
                            "safety",
                            "cleanliness",
                            "hospitality",
                            "culturalOffer",
                            "gastronomy",
                            "affordability",
                            "nightlife",
                            "infrastructure",
                            "environmentalCare",
                            "wifiAvailability",
                            "shopping",
                            "familyFriendly"
                        ],
                        "additionalProperties": false
                    },
                    "userId": {
                        "type": "string",
                        "description": "ID of the user who wrote the review"
                    }
                },
                "required": ["title", "content", "rating", "userId"],
                "additionalProperties": false
            }
        }
    },
    "required": ["slug", "name", "summary", "description"],
    "additionalProperties": false
}
