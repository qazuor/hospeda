{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "post.schema.json",
    "title": "Post Seed Schema",
    "description": "JSON schema for Post entity seeds",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Post ID (UUID)"
        },
        "title": {
            "type": "string",
            "description": "Post title"
        },
        "content": {
            "type": "string",
            "description": "Post content"
        },
        "excerpt": {
            "type": "string",
            "description": "Post excerpt"
        },
        "slug": {
            "type": "string",
            "description": "Post slug"
        },
        "type": {
            "type": "string",
            "enum": ["blog", "guide", "news", "review", "announcement"],
            "description": "Post type"
        },
        "status": {
            "type": "string",
            "enum": ["draft", "published", "archived"],
            "description": "Post status"
        },
        "authorId": {
            "type": "string",
            "description": "Author user ID"
        },
        "destinationId": {
            "type": "string",
            "description": "Related destination ID"
        },
        "accommodationId": {
            "type": "string",
            "description": "Related accommodation ID"
        },
        "featured": {
            "type": "boolean",
            "description": "Whether post is featured"
        },
        "readingTime": {
            "type": "integer",
            "description": "Estimated reading time in minutes"
        },
        "views": {
            "type": "integer",
            "description": "Number of views"
        },
        "likes": {
            "type": "integer",
            "description": "Number of likes"
        },
        "media": {
            "$ref": "common.schema.json#/definitions/media"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of tag IDs"
        },
        "seo": {
            "$ref": "common.schema.json#/definitions/seo"
        },
        "publishedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Publication date"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update date"
        },
        "adminInfo": {
            "$ref": "common.schema.json#/definitions/adminInfo"
        }
    },
    "required": ["id", "title", "content", "slug", "type", "status", "authorId"],
    "additionalProperties": false
}
