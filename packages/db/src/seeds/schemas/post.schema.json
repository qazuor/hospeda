{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "post.schema.json",
    "title": "Post Seed Schema",
    "description": "JSON schema for Post entity seeds",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "id": {
            "type": "string",
            "description": "Post ID (UUID)"
        },
        "slug": {
            "type": "string",
            "description": "Post slug"
        },
        "category": {
            "type": "string",
            "enum": [
                "EVENTS",
                "CULTURE",
                "GASTRONOMY",
                "NATURE",
                "TOURISM",
                "GENERAL",
                "SPORT",
                "CARNIVAL",
                "NIGHTLIFE",
                "HISTORY",
                "TRADITIONS",
                "WELLNESS",
                "FAMILY",
                "TIPS",
                "ART",
                "BEACH",
                "RURAL",
                "FESTIVALS"
            ],
            "description": "Post category"
        },
        "title": {
            "type": "string",
            "description": "Post title"
        },
        "summary": {
            "type": "string",
            "description": "Post summary"
        },
        "content": {
            "type": "string",
            "description": "Post content"
        },
        "media": {
            "$ref": "common.schema.json#/definitions/media"
        },
        "authorId": {
            "type": "string",
            "description": "Author user ID"
        },
        "sponsorshipId": {
            "type": ["string", "null"],
            "description": "Post sponsorship ID"
        },
        "relatedDestinationId": {
            "type": ["string", "null"],
            "description": "Related destination ID"
        },
        "relatedAccommodationId": {
            "type": ["string", "null"],
            "description": "Related accommodation ID"
        },
        "relatedEventId": {
            "type": ["string", "null"],
            "description": "Related event ID"
        },
        "visibility": {
            "type": "string",
            "enum": ["PUBLIC", "PRIVATE", "RESTRICTED"],
            "description": "Post visibility"
        },
        "isFeatured": {
            "type": "boolean",
            "description": "Whether post is featured"
        },
        "isNews": {
            "type": "boolean",
            "description": "Whether post is news"
        },
        "isFeaturedInWebsite": {
            "type": "boolean",
            "description": "Whether post is featured in website"
        },
        "expiresAt": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "Post expiration date"
        },
        "likes": {
            "type": "integer",
            "description": "Number of likes"
        },
        "comments": {
            "type": "integer",
            "description": "Number of comments"
        },
        "shares": {
            "type": "integer",
            "description": "Number of shares"
        },
        "lifecycleState": {
            "type": "string",
            "enum": ["DRAFT", "ACTIVE", "ARCHIVED"],
            "description": "Lifecycle state of the post"
        },
        "moderationState": {
            "type": "string",
            "enum": ["PENDING", "APPROVED", "REJECTED"],
            "description": "Moderation state of the post"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of tag IDs"
        },
        "seo": {
            "$ref": "common.schema.json#/definitions/seo"
        }
    },
    "required": [
        "id",
        "slug",
        "category",
        "title",
        "summary",
        "content",
        "media",
        "authorId",
        "visibility",
        "isFeatured",
        "isNews",
        "isFeaturedInWebsite",
        "likes",
        "comments",
        "shares",
        "lifecycleState",
        "moderationState"
    ],
    "additionalProperties": false
}
