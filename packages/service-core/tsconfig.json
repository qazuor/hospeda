{
    "extends": "../typescript-config/package-base.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "types": ["node"],
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": [
        "src/**/*",
        "test/services/accommodation/**/*",
        "test/services/accommodationReview/**/*",
        "test/services/amenity/**/*",
        "test/services/attraction/**/*",
        "test/services/destination/**/*"
    ],
    "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
