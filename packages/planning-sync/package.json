{
    "name": "@repo/planning-sync",
    "version": "0.1.0",
    "description": "Simple Linear synchronization for Claude planning sessions",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "lint": "biome check .",
        "format": "biome format --write .",
        "check": "biome check --write .",
        "clean": "rm -rf node_modules dist",
        "typecheck": "tsc --noEmit --project ./tsconfig.json",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@linear/sdk": "^30.0.0",
        "zod": "^4.0.8"
    },
    "devDependencies": {
        "@types/node": "^22.15.3",
        "@vitest/coverage-v8": "^3.2.4",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    }
}
