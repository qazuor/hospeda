{
    "name": "@repo/github-workflow",
    "version": "0.1.0",
    "description": "GitHub workflow automation for planning sync, TODO generation, and issue enrichment",
    "private": true,
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": ["dist"],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "biome check .",
        "format": "biome format --write .",
        "check": "biome check --write .",
        "clean": "rm -rf node_modules dist",
        "typecheck": "tsc --noEmit --project ./tsconfig.json",
        "test": "vitest run --passWithNoTests",
        "test:watch": "vitest",
        "test:file": "vitest run --passWithNoTests",
        "test:coverage": "vitest run --coverage",
        "hook:post-commit": "tsx src/scripts/post-commit-hook.ts"
    },
    "dependencies": {
        "@octokit/graphql": "^9.0.3",
        "@octokit/rest": "^20.0.0",
        "@repo/logger": "workspace:*",
        "cosmiconfig": "^9.0.0",
        "cosmiconfig-typescript-loader": "^6.2.0",
        "glob": "^11.0.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@repo/typescript-config": "workspace:*",
        "@types/node": "^22.15.3",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.1.4",
        "c8": "^10.1.3",
        "tsup": "^8.4.0",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.1.3"
    }
}
