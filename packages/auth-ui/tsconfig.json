{
    "compilerOptions": {
        "target": "ES2021",
        "lib": ["ES2021", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "types": ["react", "react-dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
