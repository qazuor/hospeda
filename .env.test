# Test environment configuration
NODE_ENV=test

# API Configuration
API_PORT=3001
API_HOST=localhost
HOSPEDA_API_URL=http://localhost:3001

# Database (test)
HOSPEDA_DATABASE_URL=postgresql://localhost:5432/hospeda_test

# Clerk Test Keys (these are safe test keys that work in test environments)
HOSPEDA_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_Y2xlcmstdGVzdC1wdWJsaXNoYWJsZS1rZXk
HOSPEDA_CLERK_SECRET_KEY=sk_test_Y2xlcmstdGVzdC1zZWNyZXQta2V5
HOSPEDA_CLERK_WEBHOOK_SECRET=whsec_test_webhook_secret

# Logging
API_LOG_LEVEL=error
API_LOG_SAVE=false

# Cache
API_CACHE_ENABLED=false

# Rate Limiting
API_RATE_LIMIT_ENABLED=false

# Compression
API_COMPRESSION_ENABLED=false

# Metrics
API_METRICS_ENABLED=false

# Response formatting
API_RESPONSE_FORMAT_ENABLED=true
API_RESPONSE_INCLUDE_METADATA=true
API_RESPONSE_INCLUDE_VERSION=true
API_RESPONSE_INCLUDE_REQUEST_ID=true

# Security
API_SECURITY_ENABLED=true
API_SECURITY_HEADERS_ENABLED=true
API_SECURITY_X_FRAME_OPTIONS=DENY
API_SECURITY_X_CONTENT_TYPE_OPTIONS=nosniff

# Validation
API_VALIDATION_ENABLED=true
API_VALIDATION_MAX_BODY_SIZE=1048576
API_VALIDATION_MAX_REQUEST_TIME=5000
API_VALIDATION_CLERK_AUTH_ENABLED=false

# CORS
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=content-type,authorization,x-requested-with,x-actor-id,x-user-id
CORS_ALLOW_CREDENTIALS=false
